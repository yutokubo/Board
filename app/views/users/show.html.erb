<h3>プロフィール</h3>
<div class="text-center">
  <%=@user.profile_image %>

  <div><%=@user.name%></div>

  <div>
    <% if current_user.id == @user.id %>  
      <%= link_to edit_user_path(@user) do%>
      <i class="far fa-edit"></i>
      <%end%>
    <%end%>
  </div>

  <div><%=@user.introduction%></div>

</div>
  



